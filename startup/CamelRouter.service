[Unit]
 Description = CameRouter Service
 After network.target = CamelRouter.service
[Service]
 Type = forking
 Restart=always
 RestartSec=1
 SuccessExitStatus=143 
 ExecStart = /usr/local/bin/CamelRouter.sh start
 ExecStop = /usr/local/bin/CamelRouter.sh stop
 ExecReload = /usr/local/bin/CamelRouter.sh reload
[Install]
 WantedBy=multi-user.target